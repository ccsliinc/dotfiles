# shellcheck shell=bash
if [ "$DEBUG" = "true" ]; then echo "$DOTFILESLOC/platforms/qnap/.exports" ; fi

# Platform scripts are automatically added to PATH by base/.exports
# QNAP-specific PATH configuration including system and Container Station paths
export PATH=\
/bin:\
/sbin:\
/usr/bin:\
/usr/sbin:\
/usr/local/bin:\
/opt/bin:\
/opt/sbin:\
$DOTFILESLOC/platforms/qnap/bin:\
$(getcfg SHARE_DEF defVolMP -f /etc/config/def_share.info)/.qpkg/container-station/bin

# .bashrc
USER=$(id -un); export USER
export LOGNAME=$USER
HOSTNAME=$(/bin/hostname); export HOSTNAME
#export HISTSIZE=1000
#export HISTFILESIZE=1000
export PAGER='/bin/more '
export EDITOR='/bin/vi'
export INPUTRC=/etc/inputrc
export DMALLOC_OPTIONS=debug=0x34f47d83,inter=100,log=logfile
