# shellcheck shell=bash

# OS Version
if [[ "$OSTYPE" == *"darwin"* ]] ; then
    export OS="mac"
elif [[ "$OSTYPE" == *"linux-gnu"* ]] && [[ "$(uname -r)" == *"qnap"* ]]; then
    export OS="qnap"
elif [[ "$OSTYPE" == *"linux-gnu"* ]] && [[ "$MACHTYPE" == *"x86_64-pc-linux-gnu"* ]] ; then
    export OS="gnu"
elif [[ "$OSTYPE" == *"linux-gnu"* ]] && [[ "$MACHTYPE" == *"x86_64"* ]] ; then
    export OS="gnu"
fi