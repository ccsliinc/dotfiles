# shellcheck shell=bash
if [ "$DEBUG" = "true" ]; then echo "$DOTFILESLOC/profile/.profile_interactive" ; fi

# shellcheck source=.profile
source "$DOTFILESLOC/profile/.profile"

# shellcheck source=.exports
source "$DOTFILESLOC/profile/.exports"

# shellcheck source=.aliases
source "$DOTFILESLOC/profile/.aliases"

# shellcheck source=.update_check
bash "$DOTFILESLOC/profile/scripts/_profile_update_check.sh"

# These should be the last 2 lines of the file
# Don't make edits below this
# shellcheck source=/dev/null
[[ -f "$DOTFILESLOC/profile/_os/${OS}/.profile" ]] && source "$DOTFILESLOC/profile/_os/${OS}/.profile"

# shellcheck source=profile/.profile_motd
source "$DOTFILESLOC/profile/profile/.profile_motd"

# Load any local overwrites if needed
# shellcheck source=/dev/null
[[ -f ~/.profile.local ]] && source ~/.profile.local