#!/bin/bash
# Function: my-extract
# Purpose: Extract most common archive formats with one command
# Usage: my-extract <archive_file>
# Example: my-extract file.tar.gz
# Platform: All (requires appropriate extraction tools)
# Dependencies: tar, unzip, bunzip2, gunzip, unrar, 7z, uncompress

my_extract() {
    if [ -f "$1" ]; then
        case $1 in
            *.tar.bz2)   tar xjf "$1"     ;;
            *.tar.gz)    tar xzf "$1"     ;;
            *.bz2)       bunzip2 "$1"     ;;
            *.rar)       unrar e "$1"     ;;
            *.gz)        gunzip "$1"      ;;
            *.tar)       tar xf "$1"      ;;
            *.tbz2)      tar xjf "$1"     ;;
            *.tgz)       tar xzf "$1"     ;;
            *.zip)       unzip "$1"       ;;
            *.Z)         uncompress "$1"  ;;
            *.7z)        7z x "$1"        ;;
            *)           echo "'$1' cannot be extracted via my-extract" ;;
        esac
    else
        echo "'$1' is not a valid file"
    fi
}

# Execute if called directly (not sourced)
if [[ "${BASH_SOURCE[0]}" == "${0}" ]]; then
    my_extract "$@"
fi